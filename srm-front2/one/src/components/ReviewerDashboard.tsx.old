import { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import axios from 'axios';
import PDFViewer from './PDFViewer';

interface Paper {
    _id: string;
    submissionId: string;
    paperTitle: string;
    authorName: string;
    category: string;
    pdfUrl: string;
    status: string;
    reviewStatus?: string;
    reviewId?: string;
    createdAt: string;
}

interface ReviewFormData {
    ratings: {
        technicalQuality: string;
        significance: string;
        presentation: string;
        relevance: string;
        originality: string;
        adequacyOfCitations: string;
        overall: string;
    };
    additionalQuestions: {
        suggestOwnReferences: boolean;
        recommendForBestPaperAward: boolean;
        suggestAnotherJournal: boolean;
        willingToReviewRevisions: boolean;
    };
    recommendation: string;
    confidentialCommentsToEditor: string;
    commentsToAuthor: string;
}

const ReviewerDashboard = () => {
    const navigate = useNavigate();
    const [papers, setPapers] = useState<Paper[]>([]);
    const [selectedPaper, setSelectedPaper] = useState<Paper | null>(null);
    const [showReviewForm, setShowReviewForm] = useState(false);
    const [loading, setLoading] = useState(true);
    const [submitting, setSubmitting] = useState(false);

    const [reviewForm, setReviewForm] = useState<ReviewFormData>({
        ratings: {
            technicalQuality: '',
            significance: '',
            presentation: '',
            relevance: '',
            originality: '',
            adequacyOfCitations: '',
            overall: ''
        },
        additionalQuestions: {
            suggestOwnReferences: false,
            recommendForBestPaperAward: false,
            suggestAnotherJournal: false,
            willingToReviewRevisions: false
        },
        recommendation: '',
        confidentialCommentsToEditor: '',
        commentsToAuthor: ''
    });

    const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:5000';

    useEffect(() => {
        fetchAssignedPapers();
    }, []);

    const fetchAssignedPapers = async () => {
        try {
            const token = localStorage.getItem('token');
            const response = await axios.get(`${API_URL}/api/reviewer/papers`, {
                headers: { Authorization: `Bearer ${token}` }
            });

            if (response.data.success) {
                setPapers(response.data.papers);
            }
        } catch (error) {
            console.error('Error fetching papers:', error);
            alert('Failed to fetch assigned papers');
        } finally {
            setLoading(false);
        }
    };

    const handleViewPaper = (paper: Paper) => {
        setSelectedPaper(paper);
        setShowReviewForm(false);
    };

    const handleStartReview = (paper: Paper) => {
        setSelectedPaper(paper);
        setShowReviewForm(true);
        // Reset form
        setReviewForm({
            ratings: {
                technicalQuality: '',
                significance: '',
                presentation: '',
                relevance: '',
                originality: '',
                adequacyOfCitations: '',
                overall: ''
            },
            additionalQuestions: {
                suggestOwnReferences: false,
                recommendForBestPaperAward: false,
                suggestAnotherJournal: false,
                willingToReviewRevisions: false
            },
            recommendation: '',
            confidentialCommentsToEditor: '',
            commentsToAuthor: ''
        });
    };

    const handleRatingChange = (criterion: string, value: string) => {
        setReviewForm(prev => ({
            ...prev,
            ratings: {
                ...prev.ratings,
                [criterion]: value
            }
        }));
    };

    const handleQuestionChange = (question: string, value: boolean) => {
        setReviewForm(prev => ({
            ...prev,
            additionalQuestions: {
                ...prev.additionalQuestions,
                [question]: value
            }
        }));
    };

    const handleSubmitReview = async () => {
        if (!selectedPaper) return;

        // Validate required fields
        if (!reviewForm.recommendation) {
            alert('Please select a recommendation');
            return;
        }

        try {
            setSubmitting(true);
            const token = localStorage.getItem('token');

            const response = await axios.post(
                `${API_URL}/api/reviewer/papers/${selectedPaper._id}/review`,
                reviewForm,
                {
                    headers: { Authorization: `Bearer ${token}` }
                }
            );

            if (response.data.success) {
                alert('Review submitted successfully!');
                setShowReviewForm(false);
                setSelectedPaper(null);
                fetchAssignedPapers(); // Refresh the list
            }
        } catch (error: any) {
            console.error('Error submitting review:', error);
            alert(error.response?.data?.message || 'Failed to submit review');
        } finally {
            setSubmitting(false);
        }
    };

    const ratingOptions = ['Excellent', 'Good', 'Fair', 'Poor'];
    const recommendationOptions = [
        'Accept',
        'Conditionally Accept',
        'Revise & Resubmit',
        'Reject'
    ];

    if (loading) {
        return (
            <div className="min-h-screen flex items-center justify-center">
                <div className="text-center">
                    <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"></div>
                    <p className="text-gray-600">Loading assigned papers...</p>
                </div>
            </div>
        );
    }

    return (
        <div className="min-h-screen bg-gray-50 py-8">
            <div className="max-w-7xl mx-auto px-4">
                <div className="mb-8">
                    <h1 className="text-3xl font-bold text-gray-900 mb-2">Reviewer Dashboard</h1>
                    <p className="text-gray-600">Review assigned papers for ICMBNT 2026</p>
                </div>

                {!selectedPaper ? (
                    /* Papers List */
                    <div className="bg-white rounded-lg shadow-md p-6">
                        <h2 className="text-xl font-semibold mb-4">Assigned Papers ({papers.length})</h2>

                        {papers.length === 0 ? (
                            <p className="text-gray-500 text-center py-8">No papers assigned yet</p>
                        ) : (
                            <div className="space-y-4">
                                {papers.map((paper) => (
                                    <div
                                        key={paper._id}
                                        className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition"
                                    >
                                        <div className="flex justify-between items-start">
                                            <div className="flex-1">
                                                <h3 className="font-semibold text-lg text-gray-900 mb-2">
                                                    {paper.paperTitle}
                                                </h3>
                                                <div className="grid grid-cols-2 gap-2 text-sm text-gray-600 mb-3">
                                                    <p><strong>Submission ID:</strong> {paper.submissionId}</p>
                                                    <p><strong>Author:</strong> {paper.authorName}</p>
                                                    <p><strong>Category:</strong> {paper.category}</p>
                                                    <p>
                                                        <strong>Review Status:</strong>{' '}
                                                        <span className={`px-2 py-1 rounded text-xs ${paper.reviewStatus === 'Submitted'
                                                                ? 'bg-green-100 text-green-800'
                                                                : 'bg-yellow-100 text-yellow-800'
                                                            }`}>
                                                            {paper.reviewStatus || 'Pending'}
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                            <div className="flex gap-2 ml-4">
                                                <button
                                                    onClick={() => handleViewPaper(paper)}
                                                    className="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition"
                                                >
                                                    View PDF
                                                </button>
                                                {paper.reviewStatus !== 'Submitted' && (
                                                    <button
                                                        onClick={() => handleStartReview(paper)}
                                                        className="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition"
                                                    >
                                                        Submit Review
                                                    </button>
                                                )}
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}
                    </div>
                ) : showReviewForm ? (
                    /* Review Form */
                    <div className="bg-white rounded-lg shadow-md p-6">
                        <div className="mb-6 flex justify-between items-center">
                            <div>
                                <h2 className="text-2xl font-semibold text-gray-900">Submit Review</h2>
                                <p className="text-gray-600">{selectedPaper.paperTitle}</p>
                            </div>
                            <button
                                onClick={() => setShowReviewForm(false)}
                                className="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600"
                            >
                                Back to PDF
                            </button>
                        </div>

                        <div className="space-y-6">
                            {/* Ratings Section */}
                            <div>
                                <h3 className="text-lg font-semibold mb-4">Paper Ratings</h3>
                                <div className="space-y-4">
                                    {Object.keys(reviewForm.ratings).map((criterion) => (
                                        <div key={criterion} className="flex items-center gap-4">
                                            <label className="w-48 text-sm font-medium text-gray-700 capitalize">
                                                {criterion.replace(/([A-Z])/g, ' $1').trim()}:
                                            </label>
                                            <div className="flex gap-2">
                                                {ratingOptions.map((option) => (
                                                    <label key={option} className="flex items-center">
                                                        <input
                                                            type="radio"
                                                            name={criterion}
                                                            value={option}
                                                            checked={reviewForm.ratings[criterion as keyof typeof reviewForm.ratings] === option}
                                                            onChange={(e) => handleRatingChange(criterion, e.target.value)}
                                                            className="mr-1"
                                                        />
                                                        <span className="text-sm">{option}</span>
                                                    </label>
                                                ))}
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>

                            {/* Additional Questions */}
                            <div>
                                <h3 className="text-lg font-semibold mb-4">Additional Questions</h3>
                                <div className="space-y-2">
                                    {Object.keys(reviewForm.additionalQuestions).map((question) => (
                                        <label key={question} className="flex items-center">
                                            <input
                                                type="checkbox"
                                                checked={reviewForm.additionalQuestions[question as keyof typeof reviewForm.additionalQuestions]}
                                                onChange={(e) => handleQuestionChange(question, e.target.checked)}
                                                className="mr-2"
                                            />
                                            <span className="text-sm capitalize">
                                                {question.replace(/([A-Z])/g, ' $1').trim()}
                                            </span>
                                        </label>
                                    ))}
                                </div>
                            </div>

                            {/* Recommendation */}
                            <div>
                                <h3 className="text-lg font-semibold mb-4">Recommendation *</h3>
                                <div className="flex gap-4">
                                    {recommendationOptions.map((option) => (
                                        <label key={option} className="flex items-center">
                                            <input
                                                type="radio"
                                                name="recommendation"
                                                value={option}
                                                checked={reviewForm.recommendation === option}
                                                onChange={(e) => setReviewForm(prev => ({ ...prev, recommendation: e.target.value }))}
                                                className="mr-2"
                                            />
                                            <span className="text-sm">{option}</span>
                                        </label>
                                    ))}
                                </div>
                            </div>

                            {/* Comments */}
                            <div>
                                <h3 className="text-lg font-semibold mb-4">Confidential Comments to Editor</h3>
                                <textarea
                                    value={reviewForm.confidentialCommentsToEditor}
                                    onChange={(e) => setReviewForm(prev => ({ ...prev, confidentialCommentsToEditor: e.target.value }))}
                                    className="w-full p-3 border border-gray-300 rounded-lg"
                                    rows={4}
                                    placeholder="Enter confidential comments for the editor..."
                                />
                            </div>

                            <div>
                                <h3 className="text-lg font-semibold mb-4">Comments to Author</h3>
                                <textarea
                                    value={reviewForm.commentsToAuthor}
                                    onChange={(e) => setReviewForm(prev => ({ ...prev, commentsToAuthor: e.target.value }))}
                                    className="w-full p-3 border border-gray-300 rounded-lg"
                                    rows={4}
                                    placeholder="Enter comments for the author..."
                                />
                            </div>

                            {/* Submit Button */}
                            <div className="flex gap-4">
                                <button
                                    onClick={handleSubmitReview}
                                    disabled={submitting}
                                    className="px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 disabled:bg-gray-400 transition"
                                >
                                    {submitting ? 'Submitting...' : 'Submit Review'}
                                </button>
                                <button
                                    onClick={() => setSelectedPaper(null)}
                                    className="px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition"
                                >
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                ) : (
                    /* PDF Viewer */
                    <div className="bg-white rounded-lg shadow-md p-6">
                        <div className="mb-4 flex justify-between items-center">
                            <div>
                                <h2 className="text-xl font-semibold text-gray-900">{selectedPaper.paperTitle}</h2>
                                <p className="text-gray-600 text-sm">Submission ID: {selectedPaper.submissionId}</p>
                            </div>
                            <div className="flex gap-2">
                                <button
                                    onClick={() => handleStartReview(selectedPaper)}
                                    className="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
                                >
                                    Submit Review
                                </button>
                                <button
                                    onClick={() => setSelectedPaper(null)}
                                    className="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600"
                                >
                                    Back to List
                                </button>
                            </div>
                        </div>

                        <PDFViewer pdfUrl={selectedPaper.pdfUrl} />
                    </div>
                )}
            </div>
        </div>
    );
};

export default ReviewerDashboard;
